import java.util.Scanner;
public class ScannerOne{
    public static void main(String[] args) {
        Scanner Examp = new Scanner(System.in);
        System.out.println("Hello. Please, enter your age: ");
        int userInput = Examp.nextInt();
        System.out.println(userInput);
        switch (userInput) {
                            case 18:
                                System.out.println("Hurray!! You can be join!!");
                                break;  

        
                            default:
                                   System.out.println("Sorry, you can't be join");
                                                break;
        }
        Examp.close();                             
    }
}
